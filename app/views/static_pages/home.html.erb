<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
     <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
<div class="center hero-unit">
  
  <%= link_to image_tag("privacy_chirp.gif", alt: "Chirper", style: "float: left"), 'http://www.urbandictionary.com/define.php?term=Chirper' %>

  <h1>Welcome to Chirper!</h1>

  <h2>
    Chirper is a short message communication system. A social fun cocktail party powered by Rails.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %> 
